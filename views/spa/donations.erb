<br/>
<h2 class="doc-title">Historique de mes dons</h2><br/>
<% dons.each do |struct,v| %>
	<h3 class="doc-title"><%= struct %></h3>
	<% v.each do |year,w| %>
		<h5 class="doc-title">Total des dons en <%= year %> : <%= w['total'] %> euros</h5>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Num</th>
					<th>Date</th>
					<th>Don</th>
					<th>Objet</th>
					<th>Déduction fiscale</th>
				</tr>
			</thead>
			<tbody>
			<% w['dons'].each do |d| %>
				<tr>
					<td><%= d['donation_id'] %></td>
					<td><%= d['donation_date'] %></td>
					<td><%= d['amount'] %>€</td>
					<td><%= d['objet'] %></td>
					<td><%= d['fisc'] %></td>
				</tr>
			<% end %>
			</tbody>
		</table>
		<br/>
	<% end %>
	<br/>
<% end %>

